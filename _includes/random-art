<script>
function setGallery() {
   const imgs = [
      {% for img in site.data.artwork -%}
               [ "/{{ img.thumb_url }}", "{{ img.caption }}", "{{ img.title }}" ],
      {%- endfor %}
   ];
   var entries = [];
   var num = 1;
   while (num <= 6) {
     var chosen = Math.floor(Math.random() * imgs.length);
       if (entries.includes(chosen)) {
        continue;
       } // else
       entries.push(chosen);
       const item = document.getElementById("img" + num);
       item.childNodes[0].setAttribute('src', imgs[chosen][0]);
       item.childNodes[0].setAttribute('alt', imgs[chosen][1].substring(0,30));
       item.childNodes[0].setAttribute('data-caption', imgs[chosen][1]);
       item.childNodes[1].textContent = imgs[chosen][2];
       num += 1;
   }
}
setGallery();
</script>
