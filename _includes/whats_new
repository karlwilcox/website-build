<script>
function setWhatsNew() {
    const urls = [
        {% for url in site.whats_new_url %}
        "{{ url }}",
        {% endfor %}
    ];
    var button = document.getElementById("what-new-button");
    var choice = Math.floor(Math.random() * urls.length);
    button.setAttribute("href",urls[choice]);
}
setWhatsNew();
</script>
